bindsym $mod+Shift+p restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+period exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym t resize grow height 10 px or 10 ppt
        bindsym n resize shrink height 10 px or 10 ppt
        bindsym s resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 2 px or 2 ppt
        bindsym Down resize grow height 2 px or 2 ppt
        bindsym Up resize shrink height 2 px or 2 ppt
        bindsym Right resize grow width 2 px or 2 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+p mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)

set $bg #3f3f3f
set $fg #9f9f9f
set $hi #efef8f
set $ac #a0afa0
set $tx #040404
set $ia #8f8f8f
set $be #8faf9f
set $yw #ccdc90
set $gn #88b090
set $rd #e89393

# window colors 	border 	background 	text 	indicator
client.focused		$bg	$bg		$ac	$ac
client.unfocused	$bg	$bg		$ia
client.focused_inactive	$bg	$bg		$ac
client.urgent		$rd	$rd		$tx

#exec --no-startup-id xfce4-panel --disable-wm-check

bar {
        status_command i3blocks -c ~/.config/i3blocks.conf
        tray_output eDP1
	position top

	colors {
		background $bg
		statusline $fg
		focused_workspace $gn $bg $ac
		active_workspace $gn $ac $tx
		inactive_workspace $bg $bg $ia
		urgent_workspace $rd $bg $ac
	}
}

set $Locker dm-tool lock

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# Execute i3lock on acpi sleep event
bindsym XF86Sleep exec "dm-tool lock & sleep 1"

bindsym $mod+Delete mode "$mode_system"

# Volume keys bind to Fn + {F10 | F11 | F12}
bindsym XF86AudioMute exec "pactl set-sink-mute 1 toggle"
bindsym XF86AudioRaiseVolume exec "pactl set-sink-volume 1 +5%"
bindsym XF86AudioLowerVolume exec "pactl set-sink-volume 1 -5%"

#bindsym $mod+F1 F1

# Bind keyboard display backlight keys
bindsym XF86KbdBrightnessDown exec "xbacklight -dec 10"
bindsym XF86KbdBrightnessUp exec "xbacklight -inc 10"

# Bind display key to display utility
bindsym XF86Display exec "arandr"

# Bind touchpad toggle key
bindsym XF86TouchpadToggle exec "/usr/local/bin/touchpad_toggle.sh"

bindsym XF86Calculator exec gnome-calculator

